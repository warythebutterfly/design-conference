<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include('partials/head.ejs') %>

  <body>
    <!-- Header -->
    <%- include('partials/header.ejs') %>

    <!-- Main content -->
    <section class="row-alt">
      <div class="lead container">
        <h1>Attendees</h1>
        <p>
          The conference opens with amazing workshops and continues with two
          days of incredible talks and keynotes, all of which are facilitated by
          industry-leading experts. See who's coming...
        </p>
      </div>
    </section>

    <!-- Attendees -->
    
    <section class="row">
      <div class="container">
        <table class="attendees">
          <thead>
            <tr>
              <th>S/N</th>
              <th>Name</th>
              <th>Email</th>
              <th>Comments</th>
            </tr>
          </thead>
          <tbody>
            <% if(attendees.length) { for( let i = 0; i < attendees.length; i++) { %>
              <tr>
                <td>
                  <%= (i + 1) %>
                </td>
                <td>
                  <%= attendees[i].name %>
                </td>
                <td>
                  <%= attendees[i].email %>
                </td>
                <td>
                  <%= attendees[i].comments %>
                </td>
              </tr>
              <% } } else { %>
                <tr>
                  <td>
                    No User
                  </td>
                </tr>
                <% } %>
            <!-- <% attendees.forEach( function(attendee, index){ %>
              <tr>
                  <td> <%= index+1 %> </th>
                  <td><%= attendee.name %></td>
                  <td><%= attendee.email %></td>
                  <td><%= attendee.comments %></td>
              </tr>
              <% }); %> -->
          </tbody>
        </table>
      </div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>
  </body>
</html>
